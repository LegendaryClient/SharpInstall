<Page x:Class="LCInstaller.Pages.DownloadFiles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Height="670" Width="525"
      Title="DownloadFiles">

    <Grid>
        <ProgressBar x:Name="Progress" HorizontalAlignment="Stretch" Height="14" VerticalAlignment="Bottom" Width="505"
                     Margin="10,0,10,117" Value="0" />
        <Label Content="Installing LegendaryClient" Foreground="White" HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <Label Content="Please wait for the program to finish installing" Foreground="White" HorizontalAlignment="Left"
               VerticalAlignment="Top" Margin="10,31,0,0" />
        <Label x:Name="DownloadFull" Content="0% finished of the total install" Foreground="White"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,558,0,0" />
        <Label Content="Installing LegendaryClient.zip" Foreground="White" HorizontalAlignment="Left"
               VerticalAlignment="Top" Margin="10,508,0,0" />
        <Label x:Name="Link" Content="Retreving files from:" FontSize="10" Foreground="White"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,472,0,0" />
        <Label Content="Retreving files from:" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="10,446,0,0" />
        <Label x:Name="Bytes" Content="" Foreground="White" HorizontalAlignment="Right"
               HorizontalContentAlignment="Right" VerticalAlignment="Top" Margin="0,558,10,0" />

    </Grid>
</Page>
